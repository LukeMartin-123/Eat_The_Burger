<h1>Eat The Burger</h1>

<ul>
  {{#each burger}}
    {{#unless devour}}
      {{> burgers/burgers-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>



<h2>Burgers</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burgers:</label>
    <input type="text" id="bur" name="name">
  </div>



  <button type="submit">Add a Burger</button>
</form>
